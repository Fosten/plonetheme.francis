body { background-color: lightgrey; }

#visual-portal-wrapper {
    margin: 0 auto;
    width:960px;
}

#portal-top {
 
    background: #a30327; /* Old browsers */
    background: -moz-linear-gradient(top, #a30327 0%, #930324 50%, #71031c 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#a30327), color-stop(50%,#930324), color-stop(100%,#71031c)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #a30327 0%,#930324 50%,#71031c 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #a30327 0%,#930324 50%,#71031c 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #a30327 0%,#930324 50%,#71031c 100%); /* IE10+ */
    background: linear-gradient(to bottom, #a30327 0%,#930324 50%,#71031c 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#a30327', endColorstr='#71031c',GradientType=0 ); /* IE6-9 */
    -moz-box-shadow:    0px 4px 10px -5px #000;
    -webkit-box-shadow: 0px 4px 10px -5px #000;
    box-shadow:         0px 4px 10px -5px #000;
    z-index:9999;
}

#portal-globalnav {
    background: transparent;
}

#portal-globalnav li a {
    background: transparent;
    border-right: none;
    color: white;
}

#portal-globalnav a:hover {
    background: white;
    color: #990000;
}

#portal-columns {
    background: white;
    padding-top:5px;
}

#portal-footer-wrapper { background: #ddd;}

#portlets-footer {
    background: #71031C; /* Old browsers */
    background: -moz-linear-gradient(top, #930324 0%, #71031c 50%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#930324), color-stop(50%,#71031c)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #930324 0%,#71031c 50%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #930324 0%,#71031c 50%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #930324 0%,#71031c 50%); /* IE10+ */
    background: linear-gradient(to bottom, #930324 0%,#71031c 50%); /* W3C */
    clear:both;
    float:left;
    position: relative;
    margin-top:-55px;
    padding: 60px 0 0 0;
    font-size: 12px;
    color:white;
    text-shadow: 0px 1px 0px #000000;
    text-shadow: 0px 2px 0px rgba(0,0,0,0.5);
    width:100%;
    filter: dropshadow(color=#000000, offx=0, offy=1);
}

#portlets-footer a, #portlets-footer a:link {
    color:white;
    text-decoration: none;
}

#portlets-footer dt.portletheader {
    text-align:center;
    color:white;
    font-size:48px;
    font-style:normal;
    line-height:1.5em;
}
